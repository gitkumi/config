alias yayre='yay -Rns'

# Pacman
alias pacin='sudo pacman -S'
alias pacre='sudo pacman -Rns'
alias pacupg='sudo pacman -Syu'
alias pacclean='sudo pacman -Ssc'
alias pacser='pacman -Ss'
alias pacorph='pacman -Qdt'
