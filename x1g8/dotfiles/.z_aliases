# ls
alias ls='exa'
alias lsl='exa --oneline'
alias ll='exa --long'
alias lla='exa --long --all'
alias ltree='exa --tree --level=3'
alias lnew='exa --long --sort=new --reverse'
alias lmod='exa --long --sort=modified --reverse'

alias c='clear'

alias cat='bat'
alias fetch='pfetch'

